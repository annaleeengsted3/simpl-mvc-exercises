@addTagHelper"*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Lesson5.Models;
@model Country;
@{
    Layout = null; }


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <form method="get" asp-controller="Exercise01" asp-action="Index">
        <h2>Countries</h2> 
        <select id="country" name="country" asp-items="@ViewBag.Countries as List<SelectListItem>"></select>
        <input type="submit" value="Show country code" />
    </form>
    <div><strong>Country code</strong>: @ViewBag.CountryCode</div>

    <form method="post" asp-controller="Exercise01" asp-action="Index">
        <label for="name">Country:</label> 
        <input asp-for="@Model.Name" />
        <label for="CountryCode">Country code:</label> 
        <input asp-for="@Model.CountryCode" />
        <input type="submit" value="Add" />
    </form>


</body>
</html>
