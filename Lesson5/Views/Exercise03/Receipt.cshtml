@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using Lesson5.Models;
@model BreakfastOrder
@using System.Globalization;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Breakfast order</title>
</head>
<body>
    <h1>Your breakfast order</h1>
    <p>Hello @Model.FullName !</p>
    <p>You ordered:</p>
    <ul>
        @for (int i = 0; i < Model.BreakfastFoods.Count(); i++)
        {
            @if (Model.BreakfastFoods[i].Selected == true)

            {
                <li>@Model.BreakfastFoods[i].Name - @Model.BreakfastFoods[i].Price.ToString("C2",
                  CultureInfo.CreateSpecificCulture("da-DK"))</li>
}

        }
    </ul>
    <p>Total price: @Model.TotalPrice.ToString("C2",
                  CultureInfo.CreateSpecificCulture("da-DK"))</p>

    <p>Your order will be prepared and delivered to room number @Model.RoomNumber, on @Model.Delivery.ToString("R")</p>

</body>
</html>
